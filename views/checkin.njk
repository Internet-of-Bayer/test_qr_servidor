{% extends "layout.njk" %}

{% block scriptqrcode %}

    <script type="module" src="js/qr-scanner.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

{% endblock%}

{% block content %}

<h1 style="font: 700 20px" >QR Code</h1>

    <div id="container-qrcode" class="center-column">
        <div id="tenda" class="center-column">
            <h2>Selecione sua tenda</h2>
            <select name="select" class="tenda" id="tendaName">
            <option value="Digital Life">Digital Life</option>
            <option value="IT Plus">IT Plus</option>
            <option value="Jogos">Jogos</option>
            </select>
        </div>

        <div id="video-container">
            <video id="qr-video"></video>
        </div>

        <div id="buttons">
            <h1>Detected QR code: </h1>
            <span id="cam-qr-result">None</span>
            <br>
            <b>Last detected at: </b>
            <span id="cam-qr-result-timestamp"></span>
            <br>

        </div>
    </div>

{% endblock %}     